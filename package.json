{
  "name": "metalsmith-cache",
  "version": "1.0.0",
  "description": "metalsmith helper to store files and values between sessions",
  "main": "dist",
  "scripts": {
    "build": "npm run babel && npm run client && npm run docs && cp docs/README.md.html docs/index.html && npm run gh-pages",
    "client": "node dist/build && npm run webpack",
    "readme": "node-readme",
    "babel": "cross-env NODE_ENV=node6 babel lib -d dist",
    "babel:watch": "cross-env NODE_ENV=node6 babel lib -d dist -w",
    "docs": "npm run readme && rm -fr ./docs/* && docker -o ./docs -I -x dist,.README.md,test/fixtures,node_modules,docs,.store,config && cp --parents images/* docs",
    "gh-pages": "gh-pages -d docs",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text --check-coverage --lines 100 npm run test",
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-register test",
    "test:watch": "cross-env NODE_ENV=test mocha --compilers js:babel-register --watch test",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "webpack": "webpack --config webpack.config.js",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/leviwheatcroft/metalsmith-cache.git"
  },
  "keywords": [
    "metalsmith",
    "helper",
    "cache",
    "session"
  ],
  "author": "Levi Wheatcroft <levi@wheatcrofts.com.au> (http://leviwheatcroft.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leviwheatcroft/metalsmith-cache/issues"
  },
  "homepage": "https://github.com/leviwheatcroft/metalsmith-cache#readme",
  "watch": {
    "babel": {
      "patterns": [
        "lib"
      ]
    }
  },
  "dependencies": {
    "debug": "^2.6.6",
    "lokijs": "^1.4.3",
    "minimatch": "^3.0.4",
    "sha1": "^1.1.1",
    "vow": "^0.4.15"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "concurrently": "^3.4.0",
    "config": "^1.24.0",
    "cross-env": "^3.1.3",
    "docker": "^1.0.0",
    "eslint": "^3.7.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.1",
    "file-loader": "^0.11.1",
    "gh-pages": "^0.12.0",
    "metalsmith": "^2.3.0",
    "mocha": "^3.1.2",
    "mocha-eslint": "^3.0.1",
    "node-readme": "^0.1.9",
    "npm-watch": "^0.1.8",
    "nyc": "^8.3.1"
  },
  "eslintConfig": {
    "rules": {},
    "parser": "babel-eslint",
    "extends": "standard",
    "installedESLint": true,
    "plugins": [
      "standard",
      "babel"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "babel": {
    "presets": [
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015-node6"
        ],
        "plugins": [
          "istanbul"
        ]
      },
      "node4": {
        "presets": [
          "es2015-node4"
        ]
      },
      "node6": {
        "presets": [
          "es2015-node6"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "directories": {
    "test": "test"
  }
}
